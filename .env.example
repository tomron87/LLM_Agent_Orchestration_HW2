# Environment Variables for LSTM Frequency Extraction System
# ===========================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# === Device Configuration ===
# Specify device to use: "cuda", "mps" (Apple Silicon), or "cpu"
DEVICE=cuda

# === Paths ===
# Base directory for outputs (models, figures, logs)
OUTPUT_DIR=./outputs

# Model checkpoint directory
MODEL_DIR=./outputs/models

# Figure output directory
FIGURE_DIR=./outputs/figures

# Log output directory
LOG_DIR=./outputs/logs

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (true/false)
LOG_TO_FILE=true

# Enable console logging (true/false)
LOG_TO_CONSOLE=true

# === Training Configuration ===
# Path to config file (optional, defaults to config.yaml)
CONFIG_FILE=config.yaml

# Random seed for reproducibility
RANDOM_SEED=42

# === Performance ===
# Number of DataLoader worker processes
NUM_WORKERS=4

# Pin memory for faster GPU transfer (true/false)
PIN_MEMORY=true

# === Optional: API Keys (if adding remote logging/tracking) ===
# Uncomment and fill if using Weights & Biases, MLflow, etc.
# WANDB_API_KEY=your_key_here
# MLFLOW_TRACKING_URI=http://localhost:5000

# === Optional: Experiment Tracking ===
# Project name for experiment tracking
PROJECT_NAME=lstm_frequency_extraction

# Experiment run name (optional, auto-generated if not set)
# RUN_NAME=experiment_001

# === Optional: Advanced Settings ===
# Use deterministic algorithms (slower but reproducible)
DETERMINISTIC_MODE=true

# CUDA settings (if using NVIDIA GPU)
# CUDA_VISIBLE_DEVICES=0  # Use first GPU
# CUDA_LAUNCH_BLOCKING=1  # Synchronous execution for debugging
